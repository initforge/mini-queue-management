# ======================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# ======================================
# IMPORTANT: Change these values before deploying!
# Replace YOUR_SERVER_IP with your actual server IP or domain

# ===================
# DATABASE
# ===================
DATABASE_URL=postgresql://qstream_admin:YOUR_STRONG_PASSWORD@db:5432/queue_management
POSTGRES_DB=queue_management
POSTGRES_USER=qstream_admin
POSTGRES_PASSWORD=YOUR_STRONG_PASSWORD

# ===================
# REDIS
# ===================
REDIS_URL=redis://redis:6379

# ===================
# JWT AUTHENTICATION
# ===================
# Generate new secret: openssl rand -hex 32
JWT_SECRET_KEY=CHANGE_THIS_TO_64_CHAR_HEX_SECRET
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# ===================
# APPLICATION
# ===================
HOST=0.0.0.0
PORT=8000
DEBUG=false
ENVIRONMENT=production

# ===================
# FRONTEND URLs
# ===================
# Replace YOUR_SERVER_IP with your server IP or domain
REACT_APP_API_URL=http://YOUR_SERVER_IP:8000/api/v1
REACT_APP_WS_URL=ws://YOUR_SERVER_IP:8000/ws

# ===================
# CORS SETTINGS
# ===================
CORS_ORIGINS=http://YOUR_SERVER_IP:3000,http://YOUR_SERVER_IP,http://localhost:3000

# ===================
# SECURITY
# ===================
BCRYPT_ROUNDS=12
SESSION_TIMEOUT_MINUTES=60
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=15

# ===================
# QUEUE SETTINGS
# ===================
DEFAULT_QUEUE_TIMEOUT_MINUTES=30
MAX_QUEUE_SIZE=100
CALL_TIMEOUT_SECONDS=120
